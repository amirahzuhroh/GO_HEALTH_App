<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/img_target"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_target_blue"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_target">

            <TextView
                android:id="@+id/txt_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="TARGET"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_target"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Each Day"
                    android:textColor="@color/colorAccent"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_move_minute_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move Minute"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                    <EditText
                        android:id="@+id/edt_move_minute_target"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/edt_bg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_steps_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"/>

                    <EditText
                        android:id="@+id/edt_steps_target"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/edt_bg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_calories_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                    <EditText
                        android:id="@+id/edt_calories_target"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/edt_bg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_distances_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distances"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"/>

                    <EditText
                        android:id="@+id/edt_distances_target"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/edt_bg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_save_target"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/blue_bg"
                        android:onClick="Save"
                        android:text="SAVE"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_retr_target"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="RETRIVE"
                        android:textSize="15sp"
                        android:onClick="Get"
                        android:background="@drawable/blue_bg"/>

                    <Button
                        android:id="@+id/btn_clear_target"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/blue_bg"
                        android:onClick="Clear"
                        android:text="CLEAR"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>